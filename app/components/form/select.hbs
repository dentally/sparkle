<div class="mt-2 grid grid-cols-1">
  <select
    name="select"
    class="col-start-1 row-start-1 w-full appearance-none rounded-md bg-white py-1.5 pl-3 pr-8 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
    {{on "change" this.onChange}}
    ...attributes
  >
    {{#each @options as |selectOption|}}
      {{#if @valuePath}}
        <option value={{get selectOption @valuePath}} selected={{if (eq (get @selected @valuePath) (get selectOption @valuePath)) true false}}>
          {{get selectOption @labelPath}}
        </option>
      {{else}}
        <option selected={{if (eq @selected @selectOption) true false}}>
          {{#if this.labelPath}}
            {{get selectOption @labelPath}}
          {{else}}
            {{selectOption}}
          {{/if}}
        </option>
      {{/if}}
    {{/each}}
  </select>
  {{svg-jar "chevron" class="pointer-events-none col-start-1 row-start-1 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4"}}
</div>